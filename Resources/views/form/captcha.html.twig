{% block captcha_widget %}
    {% if is_human %}
        -
    {% else %}
        {% spaceless %}
            <img id="{{ image_id }}" src="{{ captcha_code }}" alt="" title="captcha" width="{{ captcha_width }}" height="{{ captcha_height }}" />
            {% if reload %}
                <script type="text/javascript">
                    function reload_{{ image_id }}() {
                        var img = document.getElementById('{{ image_id }}');
                        img.src = '{{ captcha_code }}?n=' + (new Date()).getTime();
                    }
                </script>
                <a class="captcha_reload" href="javascript:reload_{{ image_id }}();"><img class="captcha_reload" src="{{ asset('bundles/pvrezcomment/images/reload.png') }}" /></a>
            {% endif %}
            {{ form_widget(form) }}
        {% endspaceless %}
    {% endif %}
{% endblock %}

